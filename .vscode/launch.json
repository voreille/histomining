{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Select and Copy CPTAC Tiles",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/histomining/data/select_and_copy_normal_tile_cptac.py",
            "args": [
                "--tiles-dir",
                "/mnt/nas7/data/Personal/Valentin/histopath/tiles_20x_256",
                "--cptac-luad-csv",
                "/mnt/nas6/data/CPTAC/TCIA_CPTAC_LUAD_Pathology_Data_Table.csv",
                "--cptac-lusc-csv",
                "/mnt/nas6/data/CPTAC/TCIA_CPTAC_LSCC_Pathology_Data_Table.csv",
                "--output-dir",
                "/mnt/nas7/data/Personal/Valentin/tcga-ut/Lung_normal/0/",
                "--average-tiles-per-patient",
                "40"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Compute Embeddings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/histomining/data/compute_embeddings.py",
            "args": [
                "--data-dir",
                "/mnt/nas7/data/Personal/Valentin/tcga-ut",
                "--model-name",
                "UNI2",
                "--output-file",
                "${workspaceFolder}/data/processed/tcga-ut-embeddings/uni2-embeddings-mag-key-0.h5",
                "--batch-size",
                "512",
                "--num-workers",
                "32",
                "--gpu-id",
                "0"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Create CSV Data Split",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/histomining/data/create_csv_data_split.py",
            "args": [
                "--tcga-ut-path",
                "/mnt/nas7/data/Personal/Valentin/tcga-ut",
                "--tcga-ut-csv-split",
                "/mnt/nas7/data/Personal/Valentin/tcga-ut/train_val_test_split.csv",
                "--output-csv",
                "/mnt/nas7/data/Personal/Valentin/tcga-ut/train_val_test_split_extended.csv",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train Linear Probing from Embeddings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/histomining/training/train_linear_probing_from_embeddings.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--embeddings-h5-path",
                "${workspaceFolder}/data/processed/tcga-ut-embeddings/uni2-embeddings-mag-key-0.h5",
                "--split-csv-path",
                "/mnt/nas7/data/Personal/Valentin/tcga-ut/train_val_test_split_extended.csv",
                "--output-path",
                "${workspaceFolder}/models/linear_probing_from_embeddings/linear_probing_weights_uni2_mag_key_0.ckpt",
                "--num-epochs",
                "50",
                "--gpu-id",
                "0",
                "--batch-size",
                "256",
                "--lr",
                "0.001",
                "--weight-decay",
                "0.01",
                "--num-workers",
                "0"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}